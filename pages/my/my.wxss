/* pages/my/my.wxss */
page{
  width: 100%;
  height: 100%;
}
.my-wrap{
  width: 100%;
  height: 100%;
  background-color: lightblue;
}
.my-header{
  width: 100%;
  height: 300rpx;
  background-color: rgb(240, 73, 66);
  background-image: linear-gradient(rgb(255,80,70),rgb(255,70,0),rgb(255,80,70));
  display: flex;
  flex-direction: row;
}
.my-header .my-avatar{
  height: 300rpx;
  width: 30%;
}
.my-header .my-name{
  height: 300rpx;
  width: 40%;
}
.my-header .my-login{
  height: 300rpx;
  width: 28%;
}
page{
  height: 100%;
}
.sort-wrap{
  height: 100%;
  overflow: hidden;
}
.header{
  width: 100%;
  height: 40px;
  border-bottom: 2px solid rgb(241, 241, 241);
  padding: 6px 0;
}
.content{
  width: 100%;
  height: 100%;
}
.sort-nav{
  width: 25%;
  height: 100%;
  float: left;
  background-color: red;
}
.sort-content{
  width: 75%;
  height: 100%;
  float: left;
  background-color: #ffffff;
}
.nav-item{
  font-size: 10pt;
  height: 45px;
  line-height: 45px;
  width: 100%;
  text-align: center;
  background-color: rgb(248, 248, 248);
  color: rgb(55, 55, 55);
}
.nav-item-active{
  background-color: #ffffff;
  color: red;
}
.sort-content swiper{
  width: 100%;
  height: 100%;
}
.content .item-title{
  width: 100%;
  height: 45px;
}
.content .item-title text{
  text-align: center;
  line-height: 45px;
  font-size: 11pt;
  font-weight: bold;
  padding-left: 10px;
}
.content .item-sort{
  height: 100%;
}
.content .item-sort .item-sort-info{
  width: 33.33%;
  height: 112px;
  display: inline-block;
}
.content .item-sort .item-sort-info image{
  width: 50px;
  height: 50px;
  padding-left: 20%;
}
.content .item-sort .item-sort-info text{
  display: inline-block;
  font-size: 10pt;
  line-height: 20px;
  text-align: center;
  width: 100%;
  height: 20px;
}